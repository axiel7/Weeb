
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/themeText">

        <ListPreference
            app:icon="@drawable/ic_android_theme_24dp"
            app:defaultValue="@string/pref_theme_default_value"
            app:entries="@array/pref_theme_option_labels"
            app:entryValues="@array/pref_theme_option_values"
            app:key="@string/pref_theme_key"
            app:title="@string/themeButton"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

</PreferenceScreen>
